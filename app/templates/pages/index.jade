            .blk-read-more(data-textclass="text-1")
              .blk-read-more-text Читать далее
              .blk-read-more-ico

          aside.blk-humans.wow.slideInLeft
            h2.blk-title.st-2 Над проектом работали

            mixin human(src, name, position)
              figure.blk-humans-item
                .blk-humans-wrp
                  img.blk-humans-img(src="img/#{src}" alt="#{name}")
                figcaption 
                  span.blk-humans-position #{position}
                  span.blk-humans-name #{name}
            +human('human-1.jpg', 'Александр Прокопенко', 'Главный архитектор')
            +human('human-2.jpg', 'Мария Харитонова', '3D Дизайнер')
            +human('human-3.jpg', 'Михаил Гардеев', 'Менеджер проекта')

block btn-slider
        mixin btn-slide(src, alt)
          li.btn-slider-item
            img.btn-slider-img(src="img/#{src}", alt="#{alt}")
        
