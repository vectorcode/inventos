            +btn-slide('btn_slide_1.jpg', 'seo text1')
            +btn-slide('btn_slide_2.jpg', 'seo text2')
            +btn-slide('btn_slide_3.jpg', 'seo text3')
            +btn-slide('btn_slide_4.jpg', 'seo text4')
          